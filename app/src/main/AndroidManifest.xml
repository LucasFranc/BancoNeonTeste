<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.franco.lucas.bancoNeon">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pacman"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pacman_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.com.franco.lucas.bancoNeon.ui.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.franco.lucas.bancoNeon.ui.activities.SendMoneyActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="br.com.franco.lucas.bancoNeon.ui.activities.HistoricActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>